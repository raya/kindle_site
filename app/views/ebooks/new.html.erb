<h1>Enter in Params</h1>
<div class="row">
  <div class="span6" %>

    <%= form_for @ebook, html: { class: "form-horizontal" } do |f| %>
      <%= f.fields_for :site_arg do |builder| %>  
        <%= render 'site_arg_fields', f: builder %>
      <% end %>

      <div class="controls">
        <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
